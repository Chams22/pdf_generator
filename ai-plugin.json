{
    "name": "PDF Generator",
    "icon_url": "https://yourwebsite.com/icon.png",
    "auth": {
        "type": "none"
    },
    "api": {
        "openapi": "3.0.0",
        "info": {
            "title": "PDF Generator API",
            "version": "1.0"
        },
        "paths": {
            "/generate_pdf": {
                "post": {
                    "summary": "Generate a PDF",
                    "requestBody": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "prompt": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "prompt"
                                    ]
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "PDF generated successfully"
                        }
                    }
                }
            }
        }
    }
}